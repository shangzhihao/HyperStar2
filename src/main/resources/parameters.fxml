<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" maxWidth="300.0" minWidth="300.0" prefWidth="300.0"
      spacing="5.0" xmlns="http://javafx.com/javafx/null" fx:controller="fu.mi.fitting.controllers.ParameterController">
    <GridPane>
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <children>
            <Button onAction="#loadSamples" text="Load Samples"/>
            <Button mnemonicParsing="false" text="Replot" GridPane.columnIndex="1"/>
        </children>
    </GridPane>
    <fx:include source="samplesGrid.fxml"/>
    <TitledPane animated="false" text="Limit Data">
        <content>
            <TabPane prefHeight="120.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE">
                <tabs>
                    <Tab text="Size">
                        <content>
                            <VBox prefHeight="80.0" prefWidth="278.0" spacing="10.0">
                                <children>
                                    <Slider fx:id="sampleSizeSlider" minorTickCount="1" showTickLabels="true"
                                            value="100.0"/>
                                    <Label fx:id="sampleSizeText" alignment="TOP_LEFT" text="100%">
                                        <VBox.margin>
                                            <Insets left="115.0"/>
                                        </VBox.margin>
                                    </Label>
                                </children>
                                <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="20.0"/>
                                </padding>
                            </VBox>
                        </content>
                    </Tab>
                    <Tab text="Range">
                        <content>
                            <HBox prefHeight="100.0" prefWidth="200.0">
                                <children>
                                    <Label text="from">
                                        <HBox.margin>
                                            <Insets/>
                                        </HBox.margin>
                                    </Label>
                                    <TextField fx:id="sampleRangeFrom" prefWidth="50.0" text="N">
                                        <HBox.margin>
                                            <Insets left="10.0"/>
                                        </HBox.margin>
                                    </TextField>
                                    <Label text="to">
                                        <HBox.margin>
                                            <Insets left="20.0"/>
                                        </HBox.margin>
                                    </Label>
                                    <TextField fx:id="sampleRangeTo" prefWidth="50.0" text="N">
                                        <HBox.margin>
                                            <Insets left="10.0"/>
                                        </HBox.margin>
                                    </TextField>
                                </children>
                                <padding>
                                    <Insets bottom="10.0" left="45.0" right="10.0" top="30.0"/>
                                </padding>
                            </HBox>
                        </content>
                    </Tab>
                </tabs>
            </TabPane>
        </content>
    </TitledPane>
    <TitledPane animated="false" text="Configuration">
        <content>

            <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE">
                <tabs>
                    <Tab text="fitting">
                        <content>
                            <VBox prefHeight="200.0" prefWidth="100.0">
                                <children>
                                    <HBox prefHeight="49.0">
                                        <children>
                                            <Label text="Fitter:">
                                                <HBox.margin>
                                                    <Insets right="10.0"/>
                                                </HBox.margin>
                                            </Label>
                                            <ChoiceBox fx:id="fitterChoice" onAction="#chooseFitter" prefWidth="150.0"/>
                                        </children>
                                        <VBox.margin>
                                            <Insets bottom="10.0" top="10.0"/>
                                        </VBox.margin>
                                        <padding>
                                            <Insets left="10.0" top="10.0"/>
                                        </padding>
                                    </HBox>
                                </children>
                            </VBox>
                        </content>
                    </Tab>
                    <Tab text="cluster">
                        <content>
                            <GridPane>
                                <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                </rowConstraints>
                                <children>
                                    <Label text="Rule for Equality"/>
                                    <Label text="Rule for Empty Clusters" GridPane.rowIndex="1"/>
                                    <Label text="Rule for Termination" GridPane.rowIndex="2"/>
                                    <ChoiceBox prefWidth="150.0" GridPane.columnIndex="1"/>
                                    <ChoiceBox prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                    <ChoiceBox prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                </children>
                                <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                </padding>
                            </GridPane>
                        </content>
                    </Tab>
                    <Tab text="chart">
                        <content>
                            <GridPane prefHeight="105.0" prefWidth="278.0">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                </rowConstraints>
                                <children>
                                    <Label text="bins"/>
                                    <TextField fx:id="binsTxt" promptText="number of bins in histogram" text="100"
                                               GridPane.columnIndex="1"/>
                                    <TextField fx:id="pdfPointsTxt" promptText="number of point in pdf chart" text="200"
                                               GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                    <Label text="pdf points" GridPane.rowIndex="1"/>
                                    <Label text="cdf points" GridPane.rowIndex="2"/>
                                    <TextField fx:id="cdfPointsTxt" promptText="number of points in cdf chart"
                                               text="200" GridPane.columnIndex="1" GridPane.rowIndex="2">
                                    </TextField>
                                </children>
                                <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                </padding>
                            </GridPane>
                        </content>
                    </Tab>
                </tabs>
            </TabPane>

        </content>
    </TitledPane>
    <Button fx:id="fitBtn" mnemonicParsing="false" onAction="#fitBtnAction" prefHeight="25.0" prefWidth="48.0"
            text="Fit">
        <VBox.margin>
            <Insets/>
        </VBox.margin>
    </Button>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>

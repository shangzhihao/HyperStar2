<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" maxWidth="300.0" minWidth="300.0" prefWidth="300.0" spacing="5.0"
      xmlns="http://javafx.com/javafx/8.0.65" fx:controller="fu.mi.fitting.controllers.ParameterController">
    <Button onAction="#loadSamples" text="Load Samples"/>
    <Separator prefWidth="200.0"/>
    <Label text="Chart Parameters:">
        <VBox.margin>
            <Insets/>
        </VBox.margin>
    </Label>
    <GridPane>
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <children>
            <Label text="bins"/>
            <TextField fx:id="binsTxt" onKeyReleased="#changeBins" promptText="number of bins in histogram" text="100"
                       GridPane.columnIndex="1"/>
            <TextField fx:id="pdfPointsTxt" onKeyReleased="#changePDFPoints" promptText="number of point in pdf chart"
                       text="200" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <Label text="pdf points" GridPane.rowIndex="1"/>
            <Label text="cdf points" GridPane.rowIndex="2"/>
            <TextField fx:id="cdfPointsTxt" onKeyReleased="#changeCDFPoint" promptText="number of points in cdf chart"
                       text="200" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        </children>
    </GridPane>
    <Separator prefWidth="200.0"/>
    <Label text="Fitting Parameters"/>
    <Separator prefWidth="200.0"/>
    <HBox prefHeight="49.0">
        <children>
            <Label text="Fitter:">
                <HBox.margin>
                    <Insets right="10.0"/>
                </HBox.margin>
            </Label>
            <ChoiceBox fx:id="fitterChoice" onAction="#chooseFitter" prefWidth="150.0"/>
        </children>
        <VBox.margin>
            <Insets bottom="10.0" top="10.0"/>
        </VBox.margin>
        <padding>
            <Insets left="10.0" top="10.0"/>
        </padding>
    </HBox>
    <Separator prefWidth="200.0"/>
    <Button fx:id="fitBtn" mnemonicParsing="false" onAction="#fitBtnAction" prefHeight="25.0" prefWidth="48.0"
            text="Fit">
        <VBox.margin>
            <Insets left="30.0"/>
        </VBox.margin>
    </Button>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>

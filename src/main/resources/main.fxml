<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="549.0" prefWidth="819.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fu.mi.fitting.controller.MainController">
    <top>
        <MenuBar>
            <Menu mnemonicParsing="false" text="File">
                <MenuItem mnemonicParsing="false" text="Close" />
            </Menu>
            <Menu mnemonicParsing="false" text="Edit">
                <MenuItem mnemonicParsing="false" text="Delete" />
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
                <MenuItem mnemonicParsing="false" text="About" />
            </Menu>
        </MenuBar>
    </top>
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <Tab fx:id="pdfTab" text="pdf">
                <AnchorPane />
            </Tab>
            <Tab fx:id="cdfTab" text="cdf">
                <AnchorPane />
            </Tab>
        </TabPane>
    </center>
    <right>
        <VBox prefWidth="200.0">
            <Button onAction="#loadSamples" text="Load Samples" />
            <Label text="Parameters:">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </Label>
            <TableView fx:id="argsTable" editable="true" prefHeight="176.0" prefWidth="201.0">
                <columns>
                    <TableColumn editable="false" prefWidth="75.0" text="Parameter">
                        <cellValueFactory>
                            <PropertyValueFactory property="key" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="valueCol" editable="true" prefWidth="75.0" text="Vale">
                        <cellValueFactory>
                            <PropertyValueFactory property="value" />
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
         <HBox prefHeight="49.0">
            <children>
               <Label text="Fitter:">
                  <HBox.margin>
                     <Insets right="10.0" />
                  </HBox.margin>
               </Label>
               <ChoiceBox fx:id="fitterChoice" prefWidth="150.0" />
            </children>
            <VBox.margin>
               <Insets bottom="10.0" top="10.0" />
            </VBox.margin>
         </HBox>
            <Button fx:id="fitBtn" mnemonicParsing="false" onAction="#fitDistribution" prefHeight="25.0" prefWidth="48.0" text="Fit">
            <VBox.margin>
               <Insets left="30.0" />
            </VBox.margin></Button>
        </VBox>
    </right>
    <bottom>
        <HBox prefHeight="0.0" prefWidth="611.0">
            <Label text="status" />
        </HBox>
    </bottom>
</BorderPane>

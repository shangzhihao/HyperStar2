<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" maxWidth="280.0" minWidth="280.0" prefWidth="280.0"
      spacing="5.0" xmlns="http://javafx.com/javafx/null" fx:controller="fu.mi.fitting.controllers.SampleController">
    <GridPane>
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <children>
            <Button fx:id="loadSamplesBtn" onAction="#loadSamples" text="Load Samples"/>
            <Button fx:id="rePlotBtn" mnemonicParsing="false" onAction="#rePlot" text="Replot"
                    GridPane.columnIndex="1"/>
        </children>
    </GridPane>
    <TitledPane animated="false" text="Limit Data">
        <content>
            <TabPane prefHeight="120.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE">
                <tabs>
                    <Tab text="Size">
                        <content>
                            <VBox prefHeight="80.0" prefWidth="278.0" spacing="10.0">
                                <children>
                                    <Slider fx:id="sampleSizeSlider" minorTickCount="1" showTickLabels="true"
                                            value="100.0"/>
                                    <Label fx:id="sampleSizeText" alignment="TOP_LEFT" text="100%">
                                        <VBox.margin>
                                            <Insets left="115.0"/>
                                        </VBox.margin>
                                    </Label>
                                </children>
                                <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="20.0"/>
                                </padding>
                            </VBox>
                        </content>
                    </Tab>
                    <Tab text="Range">
                        <content>
                            <HBox prefHeight="100.0" prefWidth="200.0">
                                <children>
                                    <Label text="from">
                                        <HBox.margin>
                                            <Insets/>
                                        </HBox.margin>
                                    </Label>
                                    <TextField fx:id="sampleRangeFrom" prefWidth="50.0" text="min">
                                        <HBox.margin>
                                            <Insets left="10.0"/>
                                        </HBox.margin>
                                    </TextField>
                                    <Label text="to">
                                        <HBox.margin>
                                            <Insets left="20.0"/>
                                        </HBox.margin>
                                    </Label>
                                    <TextField fx:id="sampleRangeTo" prefWidth="50.0" text="max">
                                        <HBox.margin>
                                            <Insets left="10.0"/>
                                        </HBox.margin>
                                    </TextField>
                                </children>
                                <padding>
                                    <Insets bottom="10.0" left="45.0" right="10.0" top="30.0"/>
                                </padding>
                            </HBox>
                        </content>
                    </Tab>
                </tabs>
            </TabPane>
        </content>
    </TitledPane>
</VBox>